{% extends 'base/baseQuiz.html.twig' %}

{% block main %}

    <div class="formLogin">
        <h1>Espace Admin</h1>
        <hr>
        <h1>Modification d'une question</h1>

        <!--------------------------FORMULAIRE MODIFICATION QUESTION--------------------------------->
        {{ form_start(formQuestionsView) }}

        <div class="formLogin2">
            <div class="formLogin3">
                <div class="form-group">
                    {{ form_label(formQuestionsView.libelle, 'Libellé', {'label_attr':{'class':'labelContact'}}) }}
                    {{ form_widget(formQuestionsView.libelle, {'attr': {'class': 'form-control', 'placeholder': 'Veuiller renseigner un libellé' }}) }}
                </div>
                <div class="form-group">
                    {{ form_label(formQuestionsView.resume, 'Résumé', {'label_attr':{'class':'labelContact'}}) }}
                    {{ form_widget(formQuestionsView.resume, {'attr': {'class': 'form-control', 'placeholder': 'Veuiller renseigner une question' }}) }}
                </div>
                <div class="form-group">
                    {{ form_label(formQuestionsView.image, 'Image', {'label_attr':{'class':'labelContact'}}) }}
                    {{ form_widget(formQuestionsView.image, {'attr': {'class': 'form-control', 'placeholder': 'Veuiller renseigner une URL' }}) }}
                </div>
                <div class="form-group">
                    {{ form_label(formQuestionsView.enregistrer) }}
                    {{ form_widget(formQuestionsView.enregistrer , {'attr': {'class': 'btn btn-light'}}) }}
                </div>

                <a href="{{ path('admin') }}">Retour</a>

                <!--------------------------MESSAGE DE CONFIRMATION DE MODIFICATION--------------------------------->
                <div class="messageConfirmation">
                    {% for messages in app.flashes %}
                        {% for message in messages %}
                            {{ message }}
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
        </div>

        {{ form_end(formQuestionsView) }}

    </div>
{% endblock %}