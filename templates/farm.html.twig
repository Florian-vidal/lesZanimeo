{% extends 'base/baseFamily.html.twig' %}

{% block main %}
    <main>
        <div class="contentFamily">
            <div class="titleFarm">
                <img src="{{ asset('assets/img/main/titleFarm.png') }}" alt="">
            </div>

            <!--------------------------IMAGE BIRDS--------------------------------->
            <div class="sideFamily1">
                <a href="{{ path('birds_page') }}"><img src="{{ asset('assets/img/animals/birds.png') }}" alt="Raccourcis pour accéder aux oiseaux"></a>
            </div>

            <!--------------------------IMAGE FARM--------------------------------->
            <div class="farmFamily">
                <img src="{{ asset('assets/img/animals/farm.png') }}" alt="">
                <div class="dog">
                    <a href="{{ path('animals', {'id': 1}) }}"><img src="{{ asset('assets/img/animals/dogHitbox.png') }}" alt="Image du chien" onmouseover="PlaySound('dogSound')" onmouseout="StopSound('dogSound')">
                        <div class="animalText">Je suis le Chien !</div>
                    </a>
                </div>
                <div class="horse">
                    <a href="{{ path('animals', {'id': 2}) }}"><img src="{{ asset('assets/img/animals/horseHitbox.png') }}" alt="Image du cheval" onmouseover="PlaySound('horseSound')" onmouseout="StopSound('horseSound')">
                        <div class="animalText">Je suis le Cheval !</div>
                    </a>
                </div>
                <div class="pig">
                    <a href="{{ path('animals', {'id': 3}) }}"><img src="{{ asset('assets/img/animals/pigHitbox.png') }}" alt="Image du cochon" onmouseover="PlaySound('pigSound')" onmouseout="StopSound('pigSound')">
                        <div class="animalText">Je suis le Cochon !</div>
                    </a>
                </div>
                <div class="rabbit">
                    <a href="{{ path('animals', {'id': 4}) }}"><img src="{{ asset('assets/img/animals/rabbitHitbox.png') }}" alt="Image du lapin" onmouseover="PlaySound('rabbitSound')" onmouseout="StopSound('rabbitSound')">
                        <div class="animalText">Je suis le Lapin !</div>
                    </a>
                </div>
                <div class="sheep">
                    <a href="{{ path('animals', {'id': 5}) }}"><img src="{{ asset('assets/img/animals/sheepHitbox.png') }}" alt="Image du mouton" onmouseover="PlaySound('sheepSound')" onmouseout="StopSound('sheepSound')">
                        <div class="animalText">Je suis le Mouton !</div>
                    </a>
                </div>
                <div class="cow">
                    <a href="{{ path('animals', {'id': 6}) }}"><img src="{{ asset('assets/img/animals/cowHitbox.png') }}" alt="Image de la vache" onmouseover="PlaySound('cowSound')" onmouseout="StopSound('cowSound')">
                        <div class="animalText">Je suis la vache !</div>
                    </a>
                </div>
            </div>

            <!--------------------------IMAGE BUGS--------------------------------->
            <div class="sideFamily2">
                <a href="{{ path('bugs_page') }}"><img src="{{ asset('assets/img/animals/bugs.png') }}" alt="Raccourcis pour les insectes"></a>
            </div>
        </div>

        <!--------------------------MESSAGES POP-UP--------------------------------->
        <div class="popUpFamily">
            <span id="family">Choisis un animal et écoute ce qu'il a à te raconter !</span>
        </div>

        <div class="popUpFamilyAnnexes1">
            <span id="familyAnnexes">Tu peux voir les autres familles en cliquant ici !</span>
        </div>
        <script>
            $( document ).ready(function() {
                $('.popUpFamily').slideUp().delay(1000).slideDown();
                $('.popUpFamily').slideDown().delay(5000).slideUp();
            });
        </script>
        <script>
            $( document ).ready(function() {
                $('.popUpFamilyAnnexes1').slideUp().delay(7000).slideDown();
                $('.popUpFamilyAnnexes1').slideDown().delay(5000).slideUp()
            });
        </script>
        <div class="popUpFamilyAnnexes2">
            <span id="familyAnnexes2">Et ici !</span>
        </div>
        <script>
            $( document ).ready(function() {
                $('.popUpFamilyAnnexes2').slideUp().delay(12500).slideDown();
                $('.popUpFamilyAnnexes2').slideDown().delay(5000).slideUp()
            });
        </script>
        <!-----------------------------SONS POP-UP--------------------------------->
        <audio id='dogSound' src="{{ asset('assets/song/dog.mp3') }}"/>
        <audio id='horseSound' src="{{ asset('assets/song/horse.mp3') }}"/>
        <audio id='pigSound' src="{{ asset('assets/song/pig.mp3') }}"/>
{#
        <audio id='rabbitSound' src="{{ asset('assets/song/rabbit.mp3') }}"/>
#}
        <audio id='sheepSound' src="{{ asset('assets/song/sheep.mp3') }}"/>
        <audio id='cowSound' src="{{ asset('assets/song/cow.mp3') }}"/>

    </main>
{% endblock %}