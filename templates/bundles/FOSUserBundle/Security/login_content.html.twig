{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="formLogin">
    <a href="{{ path('home_lesZanimeo') }}"><img class="homeButton" src="{{ asset('assets/img/main/home.jpg') }}" alt=""></a>

    <h1>Connexion</h1>
    <div class="formLogin2">
        <div class="formLogin3">
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-group">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <label for="username" class="labelContact">{{ 'Identifiant'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="form-control" placeholder="Votre identifiant"/>

                <label for="password" class="labelContact">{{ 'Mot de passe'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control" placeholder="Votre mot de passe"/>

                <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                <label for="remember_me" class="labelContact">{{ 'Se souvenir de moi'|trans }}</label><br><br>

                <div class="btnConnectLogin">
                    <input type="submit" id="_submit" name="_submit" class="btn btn-light" value="{{ 'Se connecter'|trans }}" />
                </div>
            </form>
        </div>
    </div>
</div>