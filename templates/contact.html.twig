            <div class="form-group">
                {{ form_label(formContactView.email, 'email', {'label_attr':{'class':'labelContact'}}) }}
                {{ form_widget(formContactView.email, {'attr': {'class': 'form-control', 'placeholder': 'Quel est ton email ?' }}) }}
