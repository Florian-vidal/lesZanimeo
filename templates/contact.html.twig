{% extends 'base/baseQuiz.html.twig' %}

{% block main %}

    <div class="formLogin">
        <a href="{{ path('home_lesZanimeo') }}"><img class="homeButton" src="{{ asset('assets/img/main/home.jpg') }}" alt=""></a>
        <h1>Contact</h1>


        {{ form_start(formContactView) }}

        <div class="formLogin2">
            <div class="form-group">
                {{ form_label(formContactView.prenom, 'Pr√©nom', {'label_attr':{'class':'labelContact'}}) }}
                {{ form_widget(formContactView.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Quel est ton nom ?' }}) }}
